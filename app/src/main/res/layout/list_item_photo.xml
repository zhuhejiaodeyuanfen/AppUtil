<?xml version="1.0" encoding="utf-8"?>
<com.vivian.apputil.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/rlBase"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvIndex"
        android:layout_width="20dp"

        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/blue_corner_select_button"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/white" />

</com.vivian.apputil.widget.SquareRelativeLayout>